{
  "name": "yuque-vuepress",
  "version": "1.0.0",
  "description": "A downloader for articles from yuque",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "release": "standard-version"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yszar/yuque-vuepress.git"
  },
  "keywords": [
    "yuque",
    "vuepress",
    "语雀"
  ],
  "lint-staged": {
    "src/**/*.{js,ts,vue}": [
      "eslint --fix",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "author": "jiuyang",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "cz-git": "^1.3.11",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0"
  }
}
